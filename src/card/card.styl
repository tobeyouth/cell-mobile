// cell card

// animation
.cell-card
    min-height 100%
    -webkit-transition: all 0.3s ease;
       -moz-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
         -o-transition: all 0.3s ease;
            transition: all 0.3s ease;

// roles
.cell-card[data-role="navside"]
    position absolute
    top 0
    left 0
    width 80%
    z-index -1
    background-color #666

.cell-card[data-role="main"]
    background-color #fff
    min-height 480px
    .back-mask 
        position absolute
        z-index 1
        display none
        width 100%
        height 100%
        top 0
        bottom 0
        left 0
        right 0

.cell-card[data-role="setside"]
    position absolute
    top 0
    right 0
    width 80%
    z-index -1
    background-color #666

// action
.cell-card
    // left sidebar
    &[data-active="true"][data-curdect="navside"]
        z-index 10
    &[data-active="false"][data-role="main"][data-curdect="navside"]
        -webkit-transform translateX(80%);
           -moz-transform translateX(80%);
            -ms-transform translateX(80%);
             -o-transform translateX(80%);
                transform translateX(80%);
                .back-mask 
                    display block
    // right sidebar
    &[data-active="true"][data-curdect="setside"]
        z-index 10
    &[data-active="false"][data-role="main"][data-curdect="setside"]
        -webkit-transform translateX(-80%);
           -moz-transform translateX(-80%);
            -ms-transform translateX(-80%);
             -o-transform translateX(-80%);
                transform translateX(-80%);